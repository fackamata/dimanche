{% extends 'admin/admin.html.twig' %}

{% block title %}Liste des annonces{% endblock %}

{% block body %}
    <h1>Liste des annonces</h1>

    <div class="table-responsive">
        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th class="d-none d-md-table-cell">Publié le</th>
                    <th class="d-none d-sm-table-cell">Vues</th>
                    <th class="d-none d-md-table-cell">Ville</th>
                    <th>Utilisateur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for annonce in annonces %}
                <tr>
                    <td>{{ annonce.titre }}</td>
                    <td>{{ annonce.description | slice(0,30)}}...</td>
                    <td class="d-none d-md-table-cell">{{ annonce.datePublication ? annonce.datePublication|date('d/m/Y') : '' }}</td>
                    <td class="d-none d-sm-table-cell">{{ annonce.nombreVue }}</td>
                    <td>{{ annonce.ville }}</td>
                    <td>{{ annonce.user }}</td>
                    <td>
                        <a class="btn btn-outline-success" href="{{ path('annonce_show', {'id': annonce.id}) }}">Détail</a>
                        
                        <a class="btn btn-outline-warning" href="{{ path('annonce_edit', {'id': annonce.id}) }}">Modifier</a>
                        
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucunne annonce</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
